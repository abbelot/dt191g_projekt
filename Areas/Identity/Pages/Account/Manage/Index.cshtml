@page
@model IndexModel
@{
    ViewData["Title"] = "Användarnamn";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>Ändra användarnamn</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <form id="profile-form" method="post" class="w-full">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="input-div">
            <label asp-for="Username">Användarnamn</label>
            <input class="md:max-w-sm" asp-for="Username" placeholder="Vänligen ange ett användarnamn." />
        </div>
        <button id="update-profile-button" type="submit" class="btn-styling md:max-w-sm">Spara</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}