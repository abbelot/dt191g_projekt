@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>Ändra lösenord</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <form id="change-password-form" method="post" class="w-full">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="input-div">
            <label asp-for="Input.OldPassword"></label>
            <input asp-for="Input.OldPassword" class="md:max-w-sm" autocomplete="current-password" aria-required="true"
                placeholder="Ange lösenord." />
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>
        <div class="input-div">
            <label asp-for="Input.NewPassword"></label>
            <input asp-for="Input.NewPassword" class="md:max-w-sm" autocomplete="new-password" aria-required="true"
                placeholder="Ange nytt lösenord." />
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>
        <div class="input-div">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="md:max-w-sm" autocomplete="new-password" aria-required="true"
                placeholder="Bekräfta nytt lösenord." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-styling md:max-w-sm">Uppdatera lösenord</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
