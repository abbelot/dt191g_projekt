@model dt191g_projekt.Models.Post

@{
    ViewData["Title"] = "Skapa nyhet";
}

<div class="grid w-full max-w-lg mx-auto justify-items-center">
    <h1 class="justify-self-start">@ViewData["Title"]</h1>
    <form asp-action="Create" enctype="multipart/form-data" class="w-full">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-div">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="input-div">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" rows="7"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="input-div">
            <label asp-for="ImageFile"></label>
            <input asp-for="ImageFile" accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
        <div class="input-div">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select>
        </div>
        <input type="submit" value="LÃ¤gg till" class="btn-styling" />
    </form>
    <a class="link-styling justify-self-start" asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
