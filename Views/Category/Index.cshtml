@model IEnumerable<dt191g_projekt.Models.Category>

@{
    ViewData["Title"] = "Kategorier Administration";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="link-styling" asp-action="Create">Skapa kategori</a>
</p>
<div class="overflow-x-auto">
    <table class="w-full">
